<form method="post" action="{{ path('app_language_delete', {'LgID': language.LgID}) }}" onsubmit="return confirm('WARNING: deleting a language deletes all its books and defined terms.  You may want to make a backup first (from the Home screen).  Are you *absolutely* sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.LgID) }}">
    <button class="btn">Delete</button>
</form>
